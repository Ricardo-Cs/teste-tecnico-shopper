generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model ride {
  id          Int       @id @default(autoincrement())
  origin      String
  date        DateTime  @default(now())
  destination String
  distance    Int
  duration    String
  value       Int
  customer    customer? @relation(fields: [customer_id], references: [id])
  customer_id String?
  driver      driver?   @relation(fields: [driver_id], references: [id])
  driver_id   Int?
}

model driver {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  vehicle     String
  rating      Int
  comment     String
  ratePerKm   Float
  minKm       Int
  ride        ride[]
}

model customer {
  id    String @id @default(uuid())
  name  String
  email String
  ride  ride[]
}
